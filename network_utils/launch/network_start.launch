<!-- 文件路径: launch/start_drones.launch -->
<launch>
    <!-- 启动 drone1 -->
    <node name="drone1_pose_pub_sub" pkg="network_utils" type="pose_pub_sub" output="screen">
        <param name="drone_id" value="1" />
        <param name="pub_endpoint" value="tcp://192.168.1.1:5555" />
        <param name="sub_endpoints" value="tcp://192.168.1.2:5555,tcp://192.168.1.3:5555,tcp://192.168.1.4:5555" />
        <param name="dy2" value="2" />
        <param name="dy3" value="4" />
        <param name="dy4" value="6" />
    </node>

    <!-- 启动 drone2 -->
    <node name="drone2_pose_pub_sub" pkg="my_package" type="pose_pub_sub" output="screen">
        <param name="drone_id" value="2" />
        <param name="pub_endpoint" value="tcp://192.168.1.2:5555" />
        <param name="sub_endpoints" value="tcp://192.168.1.1:5555,tcp://192.168.1.3:5555,tcp://192.168.1.4:5555" />
        <param name="dy1" value="-2" />
        <param name="dy3" value="2" />
        <param name="dy4" value="4" />
    </node>

    <!-- 启动 drone3 -->
    <node name="drone3_pose_pub_sub" pkg="my_package" type="pose_pub_sub" output="screen">
        <param name="drone_id" value="3" />
        <param name="pub_endpoint" value="tcp://192.168.1.3:5555" />
        <param name="sub_endpoints" value="tcp://192.168.1.1:5555,tcp://192.168.1.2:5555,tcp://192.168.1.4:5555" />
        <param name="dy1" value="-4" />
        <param name="dy2" value="-2" />
        <param name="dy4" value="2" />
    </node>

    <!-- 启动 drone4 -->
    <node name="drone4_pose_pub_sub" pkg="my_package" type="pose_pub_sub" output="screen">
        <param name="drone_id" value="4" />
        <param name="pub_endpoint" value="tcp://192.168.1.4:5555" />
        <param name="sub_endpoints" value="tcp://192.168.1.1:5555,tcp://192.168.1.2:5555,tcp://192.168.1.3:5555" />
        <param name="dy1" value="-6" />
        <param name="dy2" value="-4" />
        <param name="dy3" value="-2" />
    </node>
</launch>
